{
  "name": "CIRC",
  "description": "An IRC client for Chrome",
  "version": "0.4.7",
  "manifest_version": 2,
  "icons": {
    "16": "static/icon/icon16.png",
    "48": "static/icon/icon48.png",
    "128": "static/icon/icon128.png"
  },

  "permissions": [
    {"socket": [
      "tcp-connect",
      "tcp-listen"
    ]},
    "notifications",
    "storage",
    "fileSystem",
    "unlimitedStorage"
  ],

  "app": {
    "background": {
      "scripts": ["bin/background.js"]
    }
  },

  "sandbox": {
    "pages": [ "bin/script_frame.html" ]
  }
}
